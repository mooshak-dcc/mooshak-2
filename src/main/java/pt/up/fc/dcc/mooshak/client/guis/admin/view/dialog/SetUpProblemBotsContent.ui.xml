<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:pt.up.fc.dcc.mooshak.client.widgets"
	xmlns:u="urn:import:pt.up.fc.dcc.mooshak.client.utils">

	<ui:style src="../Dialogs.css" />

	<g:HTMLPanel styleName="{style.setUpProblemBots}">
		<g:HTMLPanel styleName="{style.container} {style.flex}">
			<g:HTMLPanel styleName="{style.container} {style.container-left} {style.col-6} {style.flex-centered}">
				<g:Label styleName="{style.lbl-title}">Select group</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.container} {style.container-right} {style.col-6} {style.flex-centered}">
				<u:SelectOneListBox ui:field="lbGroupSelector" />
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.container} {style.flex}" ui:field="pnlGroupId">
			<g:HTMLPanel styleName="{style.container} {style.container-left} {style.col-6} {style.flex-centered}">
				<g:Label styleName="{style.lbl-title}">Type group ID</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.container} {style.container-right} {style.col-6} {style.flex-centered}">
				<g:TextBox ui:field="txtGroupId"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.container} {style.flex}">
			<g:HTMLPanel styleName="{style.container} {style.container-left} {style.col-6} {style.flex-centered}">
				<g:Label styleName="{style.lbl-title}">Select problem AIs</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.container} {style.container-right} {style.col-6} {style.flex-centered}">
				<g:ListBox multipleSelect="true" ui:field="lbAISelector" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>
