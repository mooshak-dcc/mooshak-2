<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:u="urn:import:pt.up.fc.dcc.mooshak.client.utils">
    
    <ui:with field='i18n' 
    	type='pt.up.fc.dcc.mooshak.client.guis.icpc.i18n.ICPCConstants' />

	<ui:style src="../Dialogs.css" />

	<g:HTMLPanel styleName="{style.runTournament}">
		<g:HTMLPanel styleName="{style.container} {style.flex}">
			<g:HTMLPanel styleName="{style.container} {style.container-left} {style.col-6} {style.flex-centered}">
				<g:Label styleName="{style.lbl-title}">Title of the tournament</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.container} {style.container-right} {style.col-6} {style.flex-centered}">
				<g:TextBox ui:field="tournamentTitle"/>
			</g:HTMLPanel>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{style.container} {style.flex}">
			<g:HTMLPanel styleName="{style.container} {style.container-left} {style.col-6} {style.flex-centered}">
				<g:Label styleName="{style.lbl-title}">Select game</g:Label>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.container} {style.container-right} {style.col-6} {style.flex-centered}">
				<u:SelectOneListBox ui:field="gameSelector" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
